package org.firstinspires.ftc.teamcode;

import org.firstinspires.ftc.teamcode.api.Robot;

import com.qualcomm.robotcore.eventloop.opmode.OpMode;
import com.qualcomm.robotcore.eventloop.opmode.TeleOp;

@TeleOp
public class APIOpMode extends OpMode {

    Robot bot;
    double ring_dist;
   
    public void init(){
        this.bot = new Robot(hardwareMap, telemetry);
        bot.addDcMotor("No_the_rings_r_MINE");
        bot.addDcMotor("Da_rings_r_mine");


    }

    public void loop() {
        if (gamepad1."r1"){
            bot.moveDcMotor("No_the_rings_r_MINE", 5, 4);
        }
        if(gamepad1."l1"){
            bot.moveDcMotor("No_the_rings_r_MINE", -5, 4);
        }

        }
        if(gamepad1."r2"){
            bot.moveDcMotor("Da_rings_r_mine", 5, 10);
        }
        if(gamepad1."l2"){
            bot.moveDcMotor("Da_rings_r_mine", -5, 10);
        }

    }

    public void ring_Getter(){
        //gets rings
        bot.drive(0.5,5,Robot.Direction.FORWARD);
        TimeUnit.SECONDS.sleep(0.25);
        bot.moveDcMotor("No_the_rings_are_MINE", 35, 4);
        bot.moveDcMotor("Da_rings_r_mine",50,4);
        bot.moveDcMotor("No_the_rings_are_MINE", -35, 4);
    }

}

